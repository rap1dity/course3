<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161616"
    tools:context=".ThirdActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F1F1F"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?android:attr/homeAsUpIndicator"
        />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toTopOf="@+id/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:textColor="#99FFFFFF"
                android:text="Место работы"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColorHint="#99FFFFFF"
                android:hint="Название организации" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/orgName"
                    android:maxLines="1"
                    android:inputType="text"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:padding="0dp"
                    android:background="@drawable/input_shape"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textColorHint="#99FFFFFF"
                android:hint="Должность" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/orgPosition"
                    android:maxLines="1"
                    android:inputType="text"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:padding="0dp"
                    android:background="@drawable/input_shape"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textColorHint="#99FFFFFF"
                android:hint="Начало работы">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/beginWork"
                    android:maxLines="1"
                    android:inputType="text"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:padding="0dp"
                    android:background="@drawable/input_shape"
                    android:focusable="false"
                    android:drawableEnd="@drawable/dateline"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:textColorHint="#99FFFFFF"
                android:hint="Окончание работы">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/endWork"
                    android:maxLines="1"
                    android:inputType="text"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:padding="0dp"
                    android:background="@drawable/input_shape"
                    android:focusable="false"
                    android:drawableEnd="@drawable/dateline"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </ScrollView>
    <Button
        android:id="@+id/next"
        android:backgroundTint="#FF5500"
        android:layout_width="350dp"
        android:layout_height="64dp"
        android:onClick="nextActivity"
        android:textColor="#FFF"
        android:text="Далее"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>